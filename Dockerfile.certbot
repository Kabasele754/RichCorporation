FROM certbot/certbot:latest

# Installer les paquets nécessaires
RUN apk update && \
    apk add --no-cache curl bind-tools bash busybox

# Créer un volume pour le répertoire webroot
VOLUME ["/var/www/certbot"]

# Commande pour générer les certificats initiaux
CMD ["certbot", "certonly", "--nginx", "-d", "richcorporations.com", "-d", "www.richcorporations.com", "--agree-tos", "--webroot", "-w", "/var/www/certbot"]


